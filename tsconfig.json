/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "paths": {
      "@catrx/ui/core": [
        "dist/core",
        "projects/core/src"
      ],
      "@catrx/ui/datatable": [
        "dist/datatable",
        "projects/datatable/src"
      ],
      "@catrx/ui/dynamic-component": [
        "dist/dynamic-component",
        "projects/dynamic-component/src"
      ],
      "@catrx/ui/palette-colors": [
        "dist/palette-colors",
        "projects/palette-colors/src"
      ],
      "@catrx/ui/icon-button": [
        "dist/icon-button",
        "projects/icon-button/src"
      ],
      "@catrx/ui/loader": [
        "dist/loader",
        "projects/loader/src"
      ],
      "@catrx/ui/form": [
        "dist/form",
        "projects/form/src"
      ],
      "@catrx/ui/toolbar": [
        "dist/toolbar",
        "projects/toolbar/src"
      ],
      "@catrx/ui/dialog": [
        "dist/dialog",
        "projects/dialog/src"
      ],
      "@catrx/ui/confirm": [
        "dist/confirm",
        "projects/confirm/src"
      ],
      "@catrx/ui/common": [
        "dist/common",
        "projects/common/src"
      ],
      "@catrx/ui/utils": [
        "dist/utils",
        "projects/utils/src"
      ],
      "@catrx/ui/button": [
        "dist/button",
        "projects/button/src"
      ],
      "@catrx/ui/loader-page": [
        "dist/loader-page",
        "projects/loader-page/src"
      ],
      "@catrx/ui/snackbar": [
        "dist/snackbar",
        "projects/snackbar/src"
      ]
    },
    "baseUrl": "./",
    "rootDir": ".",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": false,
    "strict": false,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2022",
    "module": "es2022",
    "lib": [
      "es2022",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "exclude": [
    "node_modules",
    "dist",
    ".github"
  ]
}
